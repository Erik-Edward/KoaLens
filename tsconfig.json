{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@components/*": ["./components/*"],
      "@hooks/*": ["./hooks/*"],
      "@services/*": ["./services/*"],
      "@types/*": ["./types/*"],
      "@utils/*": ["./utils/*"],
      "@constants/*": ["./constants/*"],
      "@stores/*": ["./stores/*"]
    },
    "types": [
      "node",
      "jest",
      "react",
      "react-native",
      "expo"
    ],
    "skipLibCheck": true,
    "jsx": "react-native",
    "allowJs": true,
    "esModuleInterop": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts",
    "app.d.ts",
    "custom.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}